<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEmail.Views.InboxPage"
             Title="InboxPage">
    <VerticalStackLayout>
        <SearchBar Placeholder="Search mail" Margin="100,0,250,0"/>

        <CollectionView Margin="40,0,0,0" ItemsSource="{Binding Inbox}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <HorizontalStackLayout Margin="0,0,0,0">
                            <Border  BackgroundColor="Green" StrokeShape="RoundRectangle 10,10,10,10" Padding="5">
                                <Label Text="{Binding Subject}" FontSize="Medium"/>
                            </Border>
                        </HorizontalStackLayout>
                    </SwipeView>   
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>