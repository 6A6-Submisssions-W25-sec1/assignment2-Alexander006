<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEmail.Views.ReadPage"
             >

    <VerticalStackLayout>
        <Label Text="{Binding Subject, StringFormat='Subject: {0}'}" Margin="10,10,0,10" TextColor="Purple"/>
        <BoxView HeightRequest="1" BackgroundColor="Black"/>
        <Label Text="{Binding From, StringFormat='From: {0}'}" Margin="10,10,0,10" TextColor="Purple"/>
        <BoxView HeightRequest="1" BackgroundColor="Black" />
        <Label Text="{Binding To, StringFormat='To: {0}'}" Margin="10,10,0,10" TextColor="Purple"/>
        <BoxView HeightRequest="1" BackgroundColor="Black"/>
        <Label Text="{Binding Date, StringFormat='Date: {0}'}" Margin="10,10,0,10" TextColor="Purple"/>
        <BoxView HeightRequest="1" BackgroundColor="Black"/>
        <Label Text="{Binding Body}" Margin="10,15,0,0"/>    
    </VerticalStackLayout>    
</ContentPage>